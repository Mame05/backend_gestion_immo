generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
   url      = env("DATABASE_URL")
 

}

enum Role {
  ADMIN
  AGENCE
  CLIENT
}

enum StatutBien {
  LIBRE
  OCCUPE
}

enum Categorie{
  MOYEN
  LUXE
}

enum TypeTransaction {
  LOCATION
  VENTE
}

enum PeriodePaiement {
  MOIS
  ANNEE
  UNIQUE
}

enum StatutReservation {
  EN_ATTENTE
  CONFIRMEE
  ANNULEE
}

model User {
  id           Int           @id @default(autoincrement())
  nom_complet  String
  email        String        @unique
  mot_passe    String
  role         Role          @default(CLIENT)
  createdAt DateTime  @default(now())
  biens        BienImmobilier[]
  commentaires Commentaire[]
  reservations Reservation[]
}

model BienImmobilier {
  id              Int           @id @default(autoincrement())
  nom             String
  categorie       Categorie   
  image           String?
  description     String
  adresse         String
  statut          StatutBien    @default(LIBRE)
  montant         Int              // ex: 50000 ou 50000000
  typeTransaction TypeTransaction
  periodePaiement PeriodePaiement? // null si vente
  agenceId     Int
  agence       User          @relation(fields: [agenceId], references: [id])
  commentaires Commentaire[]
  reservations Reservation[]

  createdAt       DateTime         @default(now())
}

model Commentaire {
  id       Int      @id @default(autoincrement())
  contenu  String
  date_publication     DateTime @default(now())
  userId   Int
  bienId   Int
  user     User     @relation(fields: [userId], references: [id])
  bien     BienImmobilier @relation(fields: [bienId], references: [id])
}

model Reservation {
  id        Int      @id @default(autoincrement())
  dateDebut DateTime
  dateFin   DateTime?
  statut    StatutReservation   @default(EN_ATTENTE)
  userId    Int
  bienId    Int
  user      User     @relation(fields: [userId], references: [id])
  bien      BienImmobilier @relation(fields: [bienId], references: [id])
}
